{% extends 'base.html.twig' %}

{% block title %}Hello ParrainageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper text">
    <h1 class="text-center">Bravo, vous avez trouvé un filleul ! ✅</h1>

    <div class="text-center">

    </div>


    <br/><br/>
    <div class="d-flex justify-content-center">
        <div>
        {% set filleul = filleul_attributed %}

        <li>{{ filleul.prenom }}</li>
        <li>{{ filleul.nom }}</li>
        <li>{{ filleul.age }}</li>
        <li>{{ filleul.genre }}</li>
        <li>{{ filleul.pays }}</li>
        <li>{{ filleul.adresse }}</li>
        <li>{{ asset(filleul.image) | figure(filleul.pays) | raw }}</li>
        </div>
    </div>
    {% endblock %}
